    Vector3.new(3, 4, 4),
    Vector3.new(3, 4, 5),
    Vector3.new(3, 5, 1),
    Vector3.new(3, 5, 2),
    Vector3.new(3, 5, 3),
    Vector3.new(3, 5, 4),
